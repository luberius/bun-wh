{
    "webhookSecret": "your-webhook-secret",
    "githubToken": "your-github-token",
    "baseDir": "/home/deploy/webhook",  // Base directory for all deployments
    "projects": {
        "project1": {
            "name": "Project One",
            "githubRepo": "owner/repo",
            "webRoot": "/var/www/project1",  // Where to symlink the public files
            "keepReleases": 5,
            "postExtract": [
                "ln -sfn {{release}}/public {{webRoot}}",
                "chmod -R 755 {{release}}",
                "chown -R www-data:www-data {{webRoot}}"
            ],
            "preRollback": [
                "php artisan down"
            ],
            "branch": "main"
        },
        "project2": {
            "name": "Project Two",
            "githubRepo": "owner/another-repo",
            "webRoot": "/var/www/project2",
            "keepReleases": 3,
            "postExtract": [
                "npm ci",
                "npm run build",
                "ln -sfn {{release}}/dist {{webRoot}}",
                "pm2 restart app"
            ],
            "branch": "production"
        }
    }
}
